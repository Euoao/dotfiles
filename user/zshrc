#=======================
# Powerlevel10k Setup
#=======================
# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

#=======================
# Environment Variables
#=======================
# Oh-my-zsh installation path
export ZSH="$HOME/.oh-my-zsh"

# Completion cache path
export ZSH_COMPDUMP=$ZSH/cache/.zcompdump-$HOST

# Repo mirror source
export REPO_URL='https://mirrors.tuna.tsinghua.edu.cn/git/git-repo/'

# Add user's private bin to PATH
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

#=======================
# Oh-my-zsh Theme
#=======================
ZSH_THEME="powerlevel10k/powerlevel10k"

# Completion waiting dots
COMPLETION_WAITING_DOTS="true"

#=======================
# Plugins Configuration
#=======================
plugins=(
    # Basic utilities
    aliases
    extract
    sudo
    safe-paste
    
    # File operations
    eza
    copyfile
    copypath
    copybuffer
    
    # Development tools
    bazel
    docker
    repo
    tmux
    
    # Command completion and highlighting
    colored-man-pages
    command-not-found
    zsh-completions
    fzf-tab
    zsh-autosuggestions
    zsh-syntax-highlighting
)

#=======================
# Load Configurations
#=======================
# Load oh-my-zsh
source $ZSH/oh-my-zsh.sh

# Load p10k configuration
[ -f ~/.p10k.zsh ] && source ~/.p10k.zsh

# Load fzf configurations
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
[ -f ~/.fzf-tab.zsh ] && source ~/.fzf-tab.zsh

# Load custom functions
[ -f ~/.function.zsh ] && source ~/.function.zsh

# Load zoxide
eval "$(zoxide init zsh)"

#=======================
# Other Settings
#=======================
# Disable terminal bell
unsetopt beep 

#=======================
# Common Aliases
#=======================
# Development tools
alias lzd='lazydocker'  # Docker TUI
alias lzg='lazygit'     # Git TUI

